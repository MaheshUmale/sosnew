{
    "pattern_id": "INSTITUTIONAL_DEMAND_LONG",
    "regime_config": {
        "COMPLETE_BULLISH": {
            "allow_entry": true,
            "quantity_mod": 2.5,
            "tp_mult": 4.0
        },
        "BULLISH": {
            "allow_entry": true,
            "quantity_mod": 1.5,
            "tp_mult": 2.0
        },
        "SIDEWAYS": {
            "allow_entry": true,
            "quantity_mod": 1.0,
            "tp_mult": 1.5
        },
        "BEARISH": {
            "allow_entry": false
        },
        "COMPLETE_BEARISH": {
            "allow_entry": false
        }
    },
    "phases": [
        {
            "id": "SMART_FILTER",
            "conditions": [
                "sentiment.smart_trend in ['Long Buildup', 'Short Covering', 'Neutral']",
                "sentiment.pcr > 0.8"
            ],
            "capture": {},
            "timeout": 0
        },
        {
            "id": "DEMAND_SETUP",
            "conditions": [
                "volume > (moving_avg(history, 20, 'volume') * 1.5)",
                "low == lowest(history, 50, 'low')"
            ],
            "capture": {
                "block_high": "high",
                "block_low": "low"
            },
            "timeout": 0
        },
        {
            "id": "RETEST_VALIDATION",
            "conditions": [
                "low >= vars.block_low",
                "low <= (vars.block_low + (vars.block_high - vars.block_low) * 0.3)"
            ],
            "timeout": 15,
            "capture": {}
        },
        {
            "id": "TRIGGER",
            "conditions": [
                "close > vars.block_high",
                "sentiment.breadth_ratio > 1.2"
            ],
            "capture": {},
            "timeout": 0
        }
    ],
    "execution": {
        "side": "BUY",
        "entry": "vars.block_high + 0.5",
        "sl": "vars.block_low - 2.0",
        "tp": "entry + ( (entry - sl) * 3.0 )",
        "option_selection": "ATM_CALL"
    },
    "description": "INSTITUTIONAL DEMAND LONG"
}