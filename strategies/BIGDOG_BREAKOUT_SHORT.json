    "phases": [
        {
            "id": "SMART_FILTER",
            "conditions": [
                "sentiment.smart_trend in ['Short Buildup', 'Long Unwinding', 'Neutral']"
            ],
            "capture": {},
            "timeout": 0
        },
        {
            "id": "CONSOLIDATION",
            "conditions": [
                "(highest(history, 10, 'high') - lowest(history, 10, 'low')) < moving_avg(history, 20, 'close') * 0.002"
            ],
            "capture": {
                "range_high": "highest(history, 10, 'high')",
                "range_low": "lowest(history, 10, 'low')"
            },
            "timeout": 0
        },
        {
            "id": "TRIGGER",
            "conditions": [
                "close < vars.range_low",
                "volume > moving_avg(history, 20, 'volume') * 1.8"
            ],
            "capture": {},
            "timeout": 5
        }
    ],
    "execution": {
        "side": "SELL",
        "entry": "close",
        "sl": "vars.range_high",
        "tp": "close - (vars.range_high - close) * 2.0",
        "option_selection": "ATM_PUT"
    },
    "description": "BIGDOG BREAKOUT SHORT"
