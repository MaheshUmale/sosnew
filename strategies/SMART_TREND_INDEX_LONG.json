{
    "pattern_id": "SMART_TREND_INDEX_LONG",
    "description": "Uses Smart Trend (Long Buildup/Short Covering) from Option Chain Analysis to trigger Index Long positions.",
    "regime_config": {
        "COMPLETE_BULLISH": {
            "allow_entry": true,
            "quantity_mod": 2.0,
            "tp_mult": 3.5
        },
        "BULLISH": {
            "allow_entry": true,
            "quantity_mod": 1.5,
            "tp_mult": 2.0
        },
        "SIDEWAYS": {
            "allow_entry": true,
            "quantity_mod": 1.0,
            "tp_mult": 1.5
        },
        "BEARISH": {
            "allow_entry": false
        },
        "COMPLETE_BEARISH": {
            "allow_entry": false
        }
    },
    "phases": [
        {
            "id": "SMART_FILTER",
            "conditions": [
                "sentiment.smart_trend in ['Long Buildup', 'Short Covering', 'Neutral']"
            ],
            "capture": {
                "initial_trend": "sentiment.smart_trend"
            },
            "timeout": 0
        },
        {
            "id": "TRIGGER",
            "conditions": [
                "close > moving_avg(history, 20, 'close')",
                "volume > moving_avg(history, 20, 'volume')",
                "close > open"
            ],
            "capture": {},
            "timeout": 5
        }
    ],
    "execution": {
        "side": "BUY",
        "entry": "close",
        "sl": "low - (atr(history, 14) * 0.5)",
        "tp": "close + ( (close - sl) * 2.5 )",
        "option_selection": "ATM_CALL"
    }
}