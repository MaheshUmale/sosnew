{
    "pattern_id": "BRF_SHORT",
    "regime_config": {
        "SIDEWAYS": {
            "allow_entry": true,
            "quantity_mod": 0.5,
            "tp_mult": 1.0,
            "buffer_atr": 0.5
        },
        "BEARISH": {
            "allow_entry": true,
            "quantity_mod": 1.0,
            "tp_mult": 2.5,
            "buffer_atr": 0.5
        },
        "COMPLETE_BEARISH": {
            "allow_entry": true,
            "quantity_mod": 1.2,
            "tp_mult": 3.0,
            "buffer_atr": 0.5
        },
        "COMPLETE_BULLISH": {
            "allow_entry": false,
            "quantity_mod": 1.0,
            "tp_mult": 1.0,
            "buffer_atr": 0.5
        }
    },
    "phases": [
        {
            "id": "SETUP",
            "conditions": [
                "candle.getVolume() > 10000"
            ],
            "capture": {
                "mother_h": "candle.getHigh()",
                "mother_l": "candle.getLow()"
            }
        },
        {
            "id": "VALIDATION",
            "conditions": [
                "candle.getClose() < vars.mother_l"
            ],
            "timeout": 5
        },
        {
            "id": "TRIGGER",
            "conditions": [
                "candle.getHigh() < vars.mother_h",
                "candle.getClose() > vars.mother_l"
            ]
        }
    ],
    "execution": {
        "side": "SHORT",
        "entry": "vars.mother_l - 0.1",
        "sl": "vars.mother_h",
        "tp": "entry - (risk * tp_mult)",
        "option_selection": "ATM_CALL"
    }
}