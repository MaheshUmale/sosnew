{
  "pattern_id": "BRF_SHORT",
  "regime_config": {
    "COMPLETE_BULLISH": {
      "allow_entry": false
    },
    "SIDEWAYS": {
      "tp_mult": 1.0,
      "quantity_mod": 0.5
    },
    "BEARISH": {
      "tp_mult": 2.5,
      "quantity_mod": 1.0
    },
    "COMPLETE_BEARISH": {
      "tp_mult": 3.0,
      "quantity_mod": 1.2
    }
  },
  "phases": [
    {
      "id": "SETUP",
      "conditions": [
        "volume > 10000"
      ],
      "capture": {
        "mother_h": "high",
        "mother_l": "low"
      },
      "timeout": 0
    },
    {
      "id": "VALIDATION",
      "conditions": [
        "close < vars.mother_l"
      ],
      "timeout": 5,
      "capture": {}
    },
    {
      "id": "TRIGGER",
      "conditions": [
        "high < vars.mother_h",
        "close > vars.mother_l"
      ],
      "capture": {},
      "timeout": 0
    }
  ],
  "execution": {
    "side": "SELL",
    "entry": "vars.mother_l - 0.1",
    "sl": "vars.mother_h",
    "tp": "entry - (sl - entry) * 2.0",
    "option_selection": "ATM_PUT"
  }
}